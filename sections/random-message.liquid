<div id="random-message-section">
  <p id="random-message" data-messages="{{ section.settings.messages | escape }}">
    {{ section.settings.messages | split: ',' | first }}
  </p>
</div>

{% schema %}
{
  "name": "Random Message",
  "settings": [
    {
      "type": "text",
      "id": "messages",
      "label": "Messages (comma-separated)",
      "default": "Congrats!,You got a gift!,Enjoy your shopping!"
    }
  ]
}
{% endschema %}
