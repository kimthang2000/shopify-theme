<div id="random-message">
  {% assign messages = section.settings.messages | split: ',' %}
  <p>{{ messages | sample }}</p>
</div>

{% schema %}
{
  "name": "Random Message",
  "settings": [
    {
      "type": "text",
      "id": "messages",
      "label": "Messages (comma-separated)",
      "default": "Great choice!,Almost there for a free gift!,Your cart looks awesome!,Keep shopping for surprises!"
    }
  ]
}
{% endschema %}
