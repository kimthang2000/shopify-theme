<div id="random-message-section">
  <p id="random-message">
    {% assign messages = section.settings.messages | split: ',' %}
    {{ messages | sample }}
  </p>
</div>

{% schema %}
{
  "name": "Random Message",
  "settings": [
    {
      "type": "text",
      "id": "messages",
      "label": "Messages (comma-separated)",
      "default": "Congrats!,You got a gift!,Enjoy your shopping!"
    }
  ]
}
{% endschema %}
