<section class="faq-section">
  <!-- Header -->
  <div class="faq-header">
    <h2>
      {% if template.name contains 'product' and product.metafields.custom.faq_title %}
        {{ product.metafields.custom.faq_title.value }}
      {% else %}
        {{ section.settings.title }}
      {% endif %}
    </h2>
    <p>
      {% if template.name contains 'product' and product.metafields.custom.faq_description %}
        {{ product.metafields.custom.faq_description.value }}
      {% else %}
        {{ section.settings.description }}
      {% endif %}
    </p>
  </div>

  <!-- FAQ List -->
  <div class="faq-list">
    {% assign faq_items = section.blocks %}

    {% if template.name contains 'product' and product.metafields.custom.faq_list %}
      {% assign faq_items = product.metafields.custom.faq_list.value %}
    {% endif %}

    {% if faq_items %}
      {% for faq in faq_items %}
        <div class="faq-item">
          <h4>
            {% if faq.question %}{{ faq.question.value }}{% else %}{{ faq.settings.question }}{% endif %}
          </h4>
          <p>
            {% if faq.answer %}{{ faq.answer.value }}{% else %}{{ faq.settings.answer }}{% endif %}
          </p>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</section>

<!-- Optional: debug -->
<script>
  {% if section.settings %}
    console.log('Section settings:', {{ section.settings | json }});
  {% endif %}
</script>
