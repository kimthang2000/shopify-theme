<section class="faq-section">
  <!-- Header -->
  {% comment %} <div class="faq-header">
    <h2>
      {% if template.name contains 'product' and product.metafields.custom.title %}
        {{ product.metafields.custom.title.value }}
      {% else %}
        {{ section.settings.title }}
      {% endif %}
    </h2>
    <p>
      {% if template.name contains 'product' and product.metafields.custom.description %}
        {{ product.metafields.custom.description.value }}
      {% else %}
        {{ section.settings.description }}
      {% endif %}
    </p>
  </div> {% endcomment %}

  <!-- FAQ List -->
  <div class="faq-list">
    {% assign faq_items = section.blocks %}

    {% if template.name contains 'product' and product.metafields.custom.faq_list %}
      {% assign faq_items = product.metafields.custom.faq_list.value %}
    {% endif %}

    {% if faq_items %}
      {% for faq in faq_items %}
        <div class="faq-item">
          <h4>
            {% if faq.question %}{{ faq.question.value }}{% else %}{{ faq.settings.question }}{% endif %}
          </h4>
          <p>
            {% if faq.answer %}{{ faq.answer.value }}{% else %}{{ faq.settings.answer }}{% endif %}
          </p>
        </div>
      {% endfor %}
    {% endif %}
  </div>
</section>

{% comment %} <script>
  {% if section.settings %}
    console.log('Section settings:', {{ section.blocks | json }});
  {% endif %}
</script> {% endcomment %}


{% schema %}
{
  "name": "FAQ Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Cau hoi",
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Tra loi",
    }
  ],
  "blocks": [
    {
      "type": "faq_item",
      "name": "FAQ Item",
      "settings": [
        {
          "type": "text",
          "id": "question",
          "label": "Cau hoi",
          "default": "Cau hoi"
        },
        {
          "type": "textarea",
          "id": "answer",
          "label": "Tra loi",
          "default": "Tra loi"
        }
      ]
    }
  ],
}
{% endschema %}
